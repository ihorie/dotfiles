# Basic settings ---------------------------------------------------
alias vimrc="vim ~/.vimrc"
alias bashrc="vim ~/.bashrc && source ~/.bashrc"

# Vim settings
alias vi="vim"

# Emacs settings
alias emacs="emacs -nw"

# shopt
shopt -s autocd

# ls settings
alias ll='ls -alh'
alias la='ls -A'
